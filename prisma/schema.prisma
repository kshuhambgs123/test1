generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Logs{
  LogID String @id @unique
  userID String
  leadsRequested Int
  leadsEnriched Int?
  apolloLink String
  fileName String
  creditsUsed Int
  url String?
  status String
  date DateTime
  user User @relation(fields: [userID], references: [UserID])
}

model User {
    UserID String @id @unique
    name String
    email String
    companyName String?
    phoneNumber String?
    location String?
    credits Int
    apikey String?  @unique
    date DateTime @default(now())
    logs Logs[]
}

model Admin{
  email String @id @unique
  password String
}